# UltraThink Drugs - Environment Configuration Template
# Copy this file to .env and update with your actual values

# ===== DATABASE CONFIGURATION =====
# PostgreSQL connection string (async driver)
DATABASE_URL=postgresql+asyncpg://ultrathink:dev_password_change_in_prod@localhost:5432/ultrathink_dev

# Database pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_ECHO=false  # Set to true to log all SQL queries (debugging)
DB_USE_NULL_POOL=false  # Set to true for testing only

# ===== REDIS CONFIGURATION =====
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# ===== APPLICATION SETTINGS =====
ENV=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:5173

# ===== SECURITY =====
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== EXTERNAL SERVICES =====
# OpenAI API (for AI features)
OPENAI_API_KEY=sk-your-key-here

# AWS S3 (for storing PDB files)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=ultrathink-drugs-storage
AWS_REGION=us-east-1

# ===== RATE LIMITING =====
# Requests per minute
RATE_LIMIT_FREE=10
RATE_LIMIT_PRO=100
RATE_LIMIT_ENTERPRISE=1000

# ===== MONITORING (Optional) =====
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
